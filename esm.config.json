{
    "esm": {
        "version": "2.4",
        "website": "http://www.ezservermonitor.com",
        "check_updates": true,
        "auto_refresh": 60
    },
    "disk": {
        "show_tmpfs": false
    },
    "ping": {
        "hosts": [
            "amazon.com",
            "github.com",
            "dockerhub.com"
        ]
    },
    "last_login": {
        "max": 5
    },
    "services": [
        {
            "name": "Web Server",
            "host": "localhost",
            "port": 80,
            "command": "service apache2 status",
            "expected_response": "apache2 is running"
        },
        {
            "name": "Docker",
            "host": "unix:///var/run/docker.sock",
            "port": -1,
            "command": "status docker",
            "expected_response": "docker start/running"
        },
        {
            "name": "Amazon ECS Container Agent",
            "host": "localhost",
            "port": 51678,
            "command": "status ecs",
            "expected_response": "ecs start/running"          
        },
        {
            "name": "SSH Service",
            "host": "localhost",
            "port": 22,
            "command": "status ssh",
            "expected_response": "ssh start/running"
        }
    ]
}
